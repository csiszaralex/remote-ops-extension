{
  "name": "remote-ops",
  "displayName": "Remote Ops",
  "description": "Pragmatic server management for engineers.",
  "version": "0.1.0",
  "author": "Alex Csiszar <vscode@csalex.dev>",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/csiszaralex/remote-ops-extension"
  },
  "bugs": {
    "url": "https://github.com/csiszaralex/remote-ops-extension/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remote-ops-container",
          "title": "Remote Ops",
          "icon": "resources/server-icon.svg"
        }
      ]
    },
    "views": {
      "remote-ops-container": [
        {
          "id": "remoteOpsServers",
          "name": "Servers",
          "icon": "resources/server-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "remoteOps.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "remoteOps.runCommand",
        "title": "Run Action",
        "icon": "$(play)"
      },
      {
        "command": "remoteOps.refreshEnv",
        "title": "Refresh Value",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "remoteOps.refreshEntry",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "remoteOps.runCommand",
          "group": "inline",
          "when": "viewItem == action"
        },
        {
          "command": "remoteOps.refreshEnv",
          "group": "inline",
          "when": "viewItem == env"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/vscode": "^1.80.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.28.2"
}
